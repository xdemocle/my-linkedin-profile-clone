{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/_*", "/api/*"],
  "routes": [
    { "src": "/", "dst": "/en/", "status": 302 },
    { "src": "/en", "dst": "/en/", "status": 301 },
    { "src": "/it", "dst": "/it/", "status": 301 },
    { "src": "/fr", "dst": "/fr/", "status": 301 },
    { "src": "/es", "dst": "/es/", "status": 301 },
    { "src": "/ar", "dst": "/ar/", "status": 301 },
    { "src": "/en/", "dst": "/en/index.html" },
    { "src": "/it/", "dst": "/it/index.html" },
    { "src": "/fr/", "dst": "/fr/index.html" },
    { "src": "/es/", "dst": "/es/index.html" },
    { "src": "/ar/", "dst": "/ar/index.html" },
    { "src": "/en/*", "dst": "/en/index.html" },
    { "src": "/it/*", "dst": "/it/index.html" },
    { "src": "/fr/*", "dst": "/fr/index.html" },
    { "src": "/es/*", "dst": "/es/index.html" },
    { "src": "/ar/*", "dst": "/ar/index.html" }
  ]
}
